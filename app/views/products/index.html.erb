<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4" id="productlist">
        <h1><%= product.name %></h1>
          <%= image_tag(product.image_url, class: "img-responsive", id:"productpic") %>
        <p><%= product.description %></p>
        <p><%= product.color %></p>
        <p><strong><%= product.price %> Euro / 100 g</strong></p>
        <p> <%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %><p>
      </div><!-- /col -->
    <% end %>
  </div>
  <%= link_to 'New Product', new_product_path %>
</div>


