<!DOCTYPE html>
<html>
  <head>
    <title>Appone</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= action_cable_meta_tag %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
  </head>
<body>

<!-- START nav bar -->
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div  class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse"
          data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
      <div class="projectName">
        <a href="#">MonTé</a>
      </div> <!--end projectName -->
      </div> <!--end navbar-header -->
      <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav"> 
            <li><p><%= link_to "Home", static_pages_index_path %></p></li>
            <li><p><%= link_to "About", static_pages_about_path %></p></li>
            <li><p><%= link_to "Buy MonTé", products_path %> </p></li>
            <li><p><%= link_to "Contact", static_pages_contact_path %></p></li>
             <li><p><% if user_signed_in? %>
                    <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
                  <% else %>
                    <%= link_to('Login', new_user_session_path) %>
                  <% end %><p></li>
            </ul>
      </div> <!-- nav -->
  </div> <!-- end nav container-->
</nav> <!-- end navbar-->

<%= yield %>

<!-- Alerts and Notices -->
<% if alert %>
<div class="alert alert-info" role="alert"><%= alert %></div> <% end %>

<% if notice %>
<div class="alert alert-warning" role="alert"><%= notice %></div> <% end %>

<footer>
<p> &copy; Tanja Savanin 2016 </p>

<p><%= form_tag("/products", method: "get") do %>
              <%= text_field_tag(:q)%>
              <%= submit_tag("Search") %>
            <% end %><p>

</footer>

</body>
</html>
